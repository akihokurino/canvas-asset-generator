# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
    works(page: Int!, limit: Int!): [Work!]!
    work(id: ID!): Work!
    thumbnails(page: Int!, limit: Int!): [Thumbnail!]!
}

type Mutation {
    registerFCMToken(input: RegisterFCMToken!): Boolean!
}

type Work {
    id: ID!
    videoPath: String!
    thumbnails: [Thumbnail!]!
}

type Thumbnail {
    id: ID!
    workId: ID!
    imagePath: String!
    work: Work!
}

input RegisterFCMToken {
    token: String!
    device: String!
}
